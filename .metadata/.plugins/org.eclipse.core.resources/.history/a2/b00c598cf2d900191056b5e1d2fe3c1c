package com.bridgelabz.util;

import java.util.Date;
import org.springframework.beans.factory.annotation.Autowired;
import io.jsonwebtoken.Jwts;


public class TokenGeneration {

	private final long EXPIRATION_TIME=3000;
	@Autowired
	//JwtTokenUtil JWT;
	//JwtToken JWT=new JwtToken();
	public String generString(Login id) {
	return Jwts.builder().setIssuedAt(new Date(System.currentTimeMillis())).setExpiration(new Date(System.currentTimeMillis()+EXPIRATION_TIME));
	}
}
